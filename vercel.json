{
  "functions": {
    "app/api/convert/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "SHARP_IGNORE_GLOBAL_LIBVIPS": "1",
      "SHARP_CONCURRENCY": "1"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
} 